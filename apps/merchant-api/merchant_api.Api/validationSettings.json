{
  "Category": {
    "CategoryNameMinLength": 3,
    "CategoryNameMaxLength": 50
  },
  "Image": {
    "AltTextMinLength": 5,
    "AltTextMaxLength": 256,
    "UrlMinLength": 0,
    "UrlMaxLength": 2048
  },
  "Variant": {
    "VariantNameMinLength": 3,
    "VariantNameMaxLength": 30
  },
  "ProductVariant": {
    "StockQuantityMin": 0,
    "AttributeNameMinLenght": 3,
    "AttributeNameMaxLenght": 30,
    "AttributeValueMinLenght": 1,
    "AttributeValueMaxLenght": 30
  },
  "Product": {
    "ProductNameMinLength": 3,
    "ProductNameMaxLength": 70,
    "ProductDescriptionMinLength": 5,
    "ProductDescriptionMaxLenght": 256,
    "PriceMinLenght": 0,
    "ProductBrandMinLength": 3,
    "ProductBrandMaxLength": 50
  },
  "User": {
    "UserNameMinLength": 3,
    "UserNameMaxLength": 50,
    "EmailRegex": "^[^@\\s]+@[^@\\s]+\\.[^@\\s]+$"
  },
  "Store": {
    "NameMinLength": 2,
    "NameMaxLength": 30,
    "NameRegex": "^[a-zA-Z0-9 ]*$",
    "DescriptionMinLength": 10,
    "DescriptionMaxLength": 300,
    "AddressMinLength": 8,
    "AddressMaxLength": 60,
    "AddressRegex": "^[a-zA-Z0-9., -]+$",
    "PhoneNumberMinLength": 3,
    "PhoneNumberMaxLength": 30,
    "PhoneNumberRegex": "^\\+?[0-9\\s-]*$"
  },
  "ContactUs": {
    "NameMinLength": 5,
    "NameMaxLength": 100,
    "MessageMinLength": 10,
    "MessageMaxLength": 500
  }
}
